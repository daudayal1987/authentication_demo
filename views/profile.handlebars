<div class="text-center" style="padding:50px 0">
	<div class="logo">profile</div>
	<div class="login-form-1">
		
		{{#if success}}
		<div class="alert alert-success">{{success}}</div>
		{{/if}}

		{{#if error}}
		<div class="alert alert-danger">{{error}}</div>
		{{/if}}

		<form id="profile-form" class="text-left" name="profile_form" method="post">
			<div class="main-login-form">
				<div class="login-group">
					<div class="form-group">
						<label for="profile_fullname" class="sr-only">Full Name</label>
						<input type="text" class="form-control" id="profile_fullname" name="profile_fullname" placeholder="full name" value="{{user_data.name}}">
					</div>
					
					<div class="form-group login-group-checkbox">
                        {{#ifEquals user_data.gender 'male'}}
						    <input type="radio" class="" name="profile_gender" id="male" value="male" checked="checked">
                        {{else}}
                            <input type="radio" class="" name="profile_gender" id="male" value="male">
                        {{/ifEquals}}
						<label for="male">male</label>
						
                        {{#ifEquals user_data.gender "female"}}
						    <input type="radio" class="" name="profile_gender" id="female" value="female" checked="checked">
                        {{else}}
                            <input type="radio" class="" name="profile_gender" id="female" value="female"}>
                        {{/ifEquals}}
						<label for="female">female</label>
					</div>
					
					<div class="form-group">
                        <div class='input-group date' id='profile_dob'>
                            <input type='text' class="form-control" name="profile_dob" placeholder="date of birth" value="{{user_data.dob}}" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>

                        <script type="text/javascript">
                            $(function () {
                                $('#profile_dob').datetimepicker({
                                    format: 'MMM Do, YYYY',
                                    date: "{{user_data.dob}}"
                                });
                            });
                        </script>
                    </div>
				</div>
				<button type="submit" class="login-button"><i class="fa fa-chevron-right"></i></button>
			</div>
		</form>
	</div>
</div>